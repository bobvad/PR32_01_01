<UserControl x:Class="RecordsAplication.Pages.Manufacturer.Elements.Manufacturer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecordsAplication.Pages.Manufacturer.Elements"
             mc:Ignorable="d" Width="434" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="72"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="46*"/>
        </Grid.ColumnDefinitions>

        <Border
          Grid.Column="0"
          Grid.ColumnSpan="3"
          BorderBrush="#FFFAFAFA"
          BorderThickness="1"
          Background="#FFFAFAFA"
          CornerRadius="20"
          VerticalAlignment="Center"
          Height="160">
            <Border.Effect>
                <DropShadowEffect
                  BlurRadius="10"
                  Color="Black"
                  Direction="315"
                  ShadowDepth="5"
                  Opacity="0.5"/>
            </Border.Effect>
        </Border>

        <Image
          Grid.Row="0"
          Width="64"
          Height="64"
          VerticalAlignment="Top"
          HorizontalAlignment="Center"
          Source="/Image/didg.png" Margin="0,5,0,0"/>

        <TextBlock
          Grid.Row="0"
          Grid.Column="1"
          VerticalAlignment="Top"
          Margin="7,6,6,0" Height="20"><Run Text="#Наименование "/><Run Language="ru-ru" Text="поставщика"/><Run Text=":"/></TextBlock>

        <TextBox
          x:Name="tbName"
          Grid.Row="0"
          Grid.Column="1"
          VerticalAlignment="Top"
          Margin="6,25,8,0"
           Height="24"
          TextWrapping="Wrap">
            <TextBox.Effect>
                <DropShadowEffect
                  BlurRadius="18"
                  Color="Black"
                  Direction="315"
                  ShadowDepth="2"
                  Opacity="0.5"/>
            </TextBox.Effect>
        </TextBox>

        <TextBlock
          Grid.Row="0"
          Grid.Column="2"
          VerticalAlignment="Top"
          Margin="54,8,-2,0"
          ><Run Text="#"/><Run Language="ru-ru" Text="Страна"/></TextBlock>

        <TextBox
          x:Name="tbCountry"
          Grid.Row="0"
          Grid.Column="2"
          VerticalAlignment="Top"
          Margin="53,26,12,0"
          Height="24"
          TextWrapping="Wrap">
            <TextBox.Effect>
                <DropShadowEffect
                  BlurRadius="18"
                  Color="Black"
                  Direction="315"
                  ShadowDepth="2"
                  Opacity="0.5"/>
            </TextBox.Effect>
        </TextBox>

        <TextBlock
          Grid.Column="1"
          VerticalAlignment="Top"
          Margin="8,58,53,0" Height="16"><Run Text="#"/><Run Language="ru-ru" Text="Номер телефона"/></TextBlock>

        <TextBox
   x:Name="tbPhone"
   Grid.Column="1"
   VerticalAlignment="Top"
   Margin="7,74,6,0"
  Height="24"
   TextWrapping="Wrap">
            <TextBox.Effect>
                <DropShadowEffect
           BlurRadius="18"
           Color="Black"
           Direction="315"
           ShadowDepth="2"
           Opacity="0.5"/>
            </TextBox.Effect>
        </TextBox>

        <Button
          VerticalAlignment="Top"
          Height="24"
          HorizontalAlignment="Right"
          Margin="0,76,2,0"
          Width="68"
          BorderBrush="Red"
          Background="Red"
          Foreground="White"
          FontWeight="Bold"
          Content="Удалить"
          Click="DeleteState">
            <Button.Effect>
                <DropShadowEffect
                  BlurRadius="18"
                  Color="Black"
                  Direction="315"
                  ShadowDepth="2"
                  Opacity="0.5"/>
            </Button.Effect>
        </Button>

        <Button
          VerticalAlignment="Top"
          Height="25"
          HorizontalAlignment="Center"
          Margin="0,104,0,0"
          Width="68"
          BorderBrush="Orange"
          Background="Orange"
          Foreground="White"
          FontWeight="Bold"
          Content="Изменить"
          Click="EditState">
            <Button.Effect>
                <DropShadowEffect
                  BlurRadius="18"
                  Color="Black"
                  Direction="315"
                  ShadowDepth="2"
                  Opacity="0.5"/>
            </Button.Effect>
        </Button>
        <TextBox
            x:Name="tbEmail"
            Grid.Column="2"
            VerticalAlignment="Top"
            Margin="51,74,15,0"
             Height="24"
            TextWrapping="Wrap">
            <TextBox.Effect>
                <DropShadowEffect
                    BlurRadius="18"
                    Color="Black"
                    Direction="315"
                    ShadowDepth="2"
                    Opacity="0.5"/>
            </TextBox.Effect>
        </TextBox>
        <TextBlock
            Grid.Row="0"
            Grid.Column="2"
            VerticalAlignment="Top"
            Margin="58,55,26,0"
            Height="18"><Run Text="#"/><Run Language="ru-ru" Text="Почта"/></TextBlock>
    </Grid>
</UserControl>
