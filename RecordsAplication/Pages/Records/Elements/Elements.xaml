<UserControl x:Class="RecordsAplication.Pages.Records.Elements.Elements"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecordsAplication.Pages.Records.Elements"
             mc:Ignorable="d" >
    <Grid Width="699" Height="382" >
        <Border BorderBrush="#FFFAFAFA" BorderThickness="1" Background="#FFFAFAFA" CornerRadius="10"
                VerticalAlignment="Center" Height="380">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>

            <Grid Margin="15">
                <Image Width="60" Height="60" VerticalAlignment="Top" HorizontalAlignment="Left" 
                       Source="/Image/imgCompozition.png" Margin="16,8,0,0"/>

                <Button Content="Редактировать" HorizontalAlignment="Left" VerticalAlignment="Top" 
                        Width="92" Height="35" BorderBrush="#FFFF9800" Background="#FFFF9800" 
                        Foreground="White" FontWeight="Bold" Click="EditRecord" Margin="0,73,0,0">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                    </Button.Effect>
                </Button>

                <Button Content="Удалить" HorizontalAlignment="Left" VerticalAlignment="Top" 
                        Width="92" Height="35" BorderBrush="Red" Background="Red" 
                        Foreground="White" FontWeight="Bold" Margin="0,113,0,0" Click="DeleteRecord">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                    </Button.Effect>
                </Button>

                <Grid Margin="73,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="#Название пластинок:" Margin="27,0,10,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="tbName" IsEnabled="False" Margin="24,25,10,0" Height="25" 
                            TextWrapping="Wrap" Text="" VerticalContentAlignment="Center" 
                            VerticalAlignment="Top" Padding="10,0">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </TextBox.Effect>
                    </TextBox>

                    <Label Content="#Формат записи:" Margin="28,54,16,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="tbFormat" IsEnabled="False" Margin="22,80,10,0" Height="25" 
                            TextWrapping="Wrap" Text="" VerticalContentAlignment="Center" 
                            VerticalAlignment="Top" Padding="10,0">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </TextBox.Effect>
                    </TextBox>

                    <Label Content="#Производитель:" Margin="26,110,10,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="tbManufacturer" IsEnabled="False" Margin="22,135,10,0" Height="25" 
                            TextWrapping="Wrap" Text="" VerticalContentAlignment="Center" 
                            VerticalAlignment="Top" Padding="10,0">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </TextBox.Effect>
                    </TextBox>
                    <Label Content="#Год выпуска:" Margin="10,0,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <TextBox x:Name="tbYear" IsEnabled="False" Margin="10,25,0,0" Height="25" 
                            TextWrapping="Wrap" Text="" VerticalContentAlignment="Center" 
                            VerticalAlignment="Top" Padding="10,0" Grid.Column="1">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </TextBox.Effect>
                    </TextBox>

                    <Label Content="#Размер:" Margin="10,55,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <TextBox x:Name="tbSize" IsEnabled="False" Margin="10,80,0,0" Height="25" 
                            TextWrapping="Wrap" Text="" VerticalContentAlignment="Center" 
                            VerticalAlignment="Top" Padding="10,0" Grid.Column="1">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </TextBox.Effect>
                    </TextBox>

                    <Label Content="#Состояние:" Margin="13,164,-3,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <TextBox x:Name="tbPrice" IsEnabled="False" Margin="10,135,0,0" Height="25" 
                            TextWrapping="Wrap" Text="" VerticalContentAlignment="Center" 
                            VerticalAlignment="Top" Padding="10,0" Grid.Column="1">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </TextBox.Effect>
                    </TextBox>

                    <Label Content="#Описание:" Margin="26,199,13,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="tbDescription" IsEnabled="False" Margin="29,229,3,0" Height="60" 
                            TextWrapping="Wrap" Text="" VerticalContentAlignment="Top" 
                            VerticalAlignment="Top" Padding="10,5" Grid.ColumnSpan="2">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </TextBox.Effect>
                    </TextBox>
                    <TextBox x:Name="tbState" IsEnabled="False" Margin="10,192,2,0" Height="25" 
                        TextWrapping="Wrap" Text="" VerticalContentAlignment="Center" 
                        VerticalAlignment="Top" Padding="10,0" Grid.Column="1">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5"/>
                        </TextBox.Effect>
                    </TextBox>
                    <Label Content="#Стоимость:" Margin="11,107,-2,0" VerticalAlignment="Top" Grid.Column="1"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
