<Page x:Class="RecordsAplication.Pages.State.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RecordsAplication.Pages.State"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add">

    <Grid Background="#FFE6E6E6">
        <Grid.RowDefinitions>
            <RowDefinition Height="190"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="72"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="46*"/>
        </Grid.ColumnDefinitions>

        <Border
          Grid.Column="0"
          Grid.ColumnSpan="3"
          BorderBrush="#FFFAFAFA"
          BorderThickness="1"
          Background="#FFFAFAFA"
          CornerRadius="20" Margin="18,30,17,-235">
            <Border.Effect>
                <DropShadowEffect
                  BlurRadius="10"
                  Color="Black"
                  Direction="315"
                  ShadowDepth="5"
                  Opacity="0.5"/>
            </Border.Effect>
        </Border>

        <Image
          Grid.Row="0"
          Grid.Column="0"
          Width="61"
          Height="57"
          VerticalAlignment="Top"
          HorizontalAlignment="Left"
          Source="/Image/imgCompozition.png" Margin="28,43,0,0" Grid.ColumnSpan="2"/>

        <TextBlock
          Grid.Row="0"
          Grid.Column="1"
          VerticalAlignment="Top"
          Margin="25,38,0,0"
          Text="#Наименование"/>

        <TextBox
          x:Name="tbName"
          Grid.Row="0"
          Grid.Column="1"
          VerticalAlignment="Top"
          Margin="24,55,9,0"
          Height="25"
          TextWrapping="Wrap">
            <TextBox.Effect>
                <DropShadowEffect
                  BlurRadius="18"
                  Color="Black"
                  Direction="315"
                  ShadowDepth="2"
                  Opacity="0.5"/>
            </TextBox.Effect>
        </TextBox>

        <TextBlock
          Grid.Row="0"
          Grid.Column="2"
          VerticalAlignment="Top"
          Margin="5,38,15,0"
          Text="#Сокращенное наименование"/>

        <TextBox
          x:Name="tbSurname"
          Grid.Row="0"
          Grid.Column="2"
          VerticalAlignment="Top"
          Margin="3,56,29,0"
          Height="24"
          TextWrapping="Wrap">
            <TextBox.Effect>
                <DropShadowEffect
                  BlurRadius="18"
                  Color="Black"
                  Direction="315"
                  ShadowDepth="2"
                  Opacity="0.5"/>
            </TextBox.Effect>
        </TextBox>

        <TextBlock
          Grid.Column="1"
          VerticalAlignment="Center"
          Margin="22,0,0,0"
          Text="#Описание"/>

        <TextBox 
          x:Name="tbDescription"
          Grid.Column="1"
          Margin="22,106,27,-190"
          TextWrapping="Wrap" Grid.ColumnSpan="2">
            <TextBox.Effect>
                <DropShadowEffect
                  BlurRadius="18"
                  Color="Black"
                  Direction="315"
                  ShadowDepth="2"
                  Opacity="0.5"/>
            </TextBox.Effect>
        </TextBox>

        <Button
         x:Name="BthAdd"
          Height="25"
          HorizontalAlignment="Left"
          Margin="186,386,0,-221"
          Width="138"
          BorderBrush="Orange"
          Background="Orange"
          Foreground="White"
          FontWeight="Bold"
          Click="AddState"
          Content="Добавить" Grid.Column="2">
            <Button.Effect>
                <DropShadowEffect
                  BlurRadius="18"
                  Color="Black"
                  Direction="315"
                  ShadowDepth="2"
                  Opacity="0.5"/>
            </Button.Effect>
        </Button>
    </Grid>
</Page>
