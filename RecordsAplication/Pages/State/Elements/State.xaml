<UserControl x:Class="RecordsAplication.Pages.State.Elements.State"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecordsAplication.Pages.State.Elements"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="72"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="46*"/>
        </Grid.ColumnDefinitions>

        <Border
            Grid.Column="0"
            Grid.ColumnSpan="3"
            BorderBrush="#FFFAFAFA"
            BorderThickness="1"
            Background="#FFFAFAFA"
            CornerRadius="20"
            VerticalAlignment="Center"
            Height="160">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Color="Black"
                    Direction="315"
                    ShadowDepth="5"
                    Opacity="0.5"/>
            </Border.Effect>
        </Border>

        <Image
            Grid.Row="0"
            Width="56"
            Height="55"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Source="/Image/imgCompozition.png" Margin="0,18,0,0"/>

        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            VerticalAlignment="Top"
            Margin="11,8,367,0"
            Text="#Наименование" Grid.ColumnSpan="2"/>

        <TextBox
            x:Name="tbName"
            IsEnabled="False"
            Grid.Row="0"
            Grid.Column="1"
            VerticalAlignment="Top"
            Margin="10,25,8,0"
            Height="25"
            TextWrapping="Wrap">
            <TextBox.Effect>
                <DropShadowEffect
                    BlurRadius="18"
                    Color="Black"
                    Direction="315"
                    ShadowDepth="2"
                    Opacity="0.5"/>
            </TextBox.Effect>
        </TextBox>

        <TextBlock
            Grid.Row="0"
            Grid.Column="2"
            VerticalAlignment="Top"
            Margin="6,8,-2,0"
            Text="#Сокращенное наименование"/>

        <TextBox
            x:Name="tbSurname"
            IsEnabled="False"
            Grid.Row="0"
            Grid.Column="2"
            VerticalAlignment="Top"
            Margin="4,26,12,0"
            Height="24"
            TextWrapping="Wrap">
            <TextBox.Effect>
                <DropShadowEffect
                    BlurRadius="18"
                    Color="Black"
                    Direction="315"
                    ShadowDepth="2"
                    Opacity="0.5"/>
            </TextBox.Effect>
        </TextBox>

        <TextBlock
            Grid.Column="1"
            VerticalAlignment="Top"
            Margin="8,58,367,0"
            Text="#Описание" Grid.ColumnSpan="2"/>

        <TextBox
            x:Name="tbDescription"
            Grid.Column="1"
            IsEnabled="False"
            VerticalAlignment="Top"
            Margin="7,74,10,0"
            Height="60"
            TextWrapping="Wrap" Grid.ColumnSpan="2">
            <TextBox.Effect>
                <DropShadowEffect
                    BlurRadius="18"
                    Color="Black"
                    Direction="315"
                    ShadowDepth="2"
                    Opacity="0.5"/>
            </TextBox.Effect>
        </TextBox>

        <Button
            VerticalAlignment="Top"
            Height="24"
            HorizontalAlignment="Right"
            Margin="0,76,2,0"
            Width="68"
            BorderBrush="Red"
            Background="Red"
            Foreground="White"
            FontWeight="Bold"
            Content="Удалить"
            Click="DeleteState">
            <Button.Effect>
                <DropShadowEffect
                    BlurRadius="18"
                    Color="Black"
                    Direction="315"
                    ShadowDepth="2"
                    Opacity="0.5"/>
            </Button.Effect>
        </Button>

        <Button
            VerticalAlignment="Top"
            Height="25"
            HorizontalAlignment="Center"
            Margin="0,104,0,0"
            Width="68"
            BorderBrush="Orange"
            Background="Orange"
            Foreground="White"
            FontWeight="Bold"
            Content="Изменить"
            Click="EditState">
            <Button.Effect>
                <DropShadowEffect
                    BlurRadius="18"
                    Color="Black"
                    Direction="315"
                    ShadowDepth="2"
                    Opacity="0.5"/>
            </Button.Effect>
        </Button>
    </Grid>
</UserControl>